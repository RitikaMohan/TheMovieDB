<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.MyApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowSplashScreenBackground">#AFDBF5</item><!-- Background color -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item><!-- Optional animated icon -->
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>  <!-- Theme to use after splash screen fades out -->
    </style>
</resources>